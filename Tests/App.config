<?xml version="1.0" encoding="utf-8"?>
<configuration>

  <configSections>
    <section name="Environments" type="Euroffice.Framework.Setup.EnvironmentsDataSection, Euroffice.Framework" />
    <section name="specFlow" type="TechTalk.SpecFlow.Configuration.ConfigurationSectionHandler, TechTalk.SpecFlow" />
  </configSections>

  <appSettings>

    <add key="ErrorCaptureLocation" value="C:\Temp\" />

    <!--Choose browser to run test-->

    <!--<add key="Browser" value="OpenQA.Selenium.Firefox.FirefoxDriver"/>-->
    <add key="Browser" value="OpenQA.Selenium.Chrome.ChromeDriver" />
    <!--<add key="Browser" value="OpenQA.Selenium.IE.InternetExplorerDriver"/>-->

  </appSettings>

  <Environments>

    <Environment>
      <add name="HomePage" url="http://www.euroffice.co.uk/" pageTitle="Euroffice Discount Office Supplies and Office Stationery" />
      <add name="SearchResults" url="http://www.euroffice.co.uk/Search" pageTitle="Search" />
    </Environment>

  </Environments>

</configuration>